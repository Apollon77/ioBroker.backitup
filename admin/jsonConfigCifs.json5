{
  "type": "panel",
  "label": "NAS / Copy",
  "items": {
    "_checkConfig": {
      // this component is not visible in the UI
      // it checks the configuration
      "type": "custom",
      "i18n": true,
      "url": "custom/customComponents.js",
      "name": "ConfigCustomBackItUpSet/Components/CheckAllConfigInvisible"
    },
    "_header": {
      "type": "header",
      "size": 2,
      "text": "NAS / Copy",
      "sm": 12,
    },
    "connectType": {
			"type": "select",
			"label": "connection type",
			"sm": 12,
			"md": 8,
			"lg": 4,
			"help": "connection type",
			"options": [
				{
					"label": {
            "en": "CIFS",
            "de": "CIFS",
            "ru": "CIFS",
            "pt": "CIFS",
            "nl": "CIFS",
            "fr": "CIFS",
            "it": "CIFS",
            "es": "CIFS",
            "pl": "CIFS",
            "uk": "КІФ",
            "zh-cn": "科爱委"
          },
					"value": "CIFS"
				},
				{
					"label": {
            "en": "Copy",
            "de": "Kopieren",
            "ru": "Копировать",
            "pt": "Entendido",
            "nl": "Kopiëren",
            "fr": "Copier",
            "it": "Copia",
            "es": "Copiado",
            "pl": "Kopiuj",
            "uk": "Зареєструватися",
            "zh-cn": "复制"
          },
					"value": "Copy"
				},
				{
					"label": "Expert",
					"value": "Expert"
				},
        {
					"label": "NFS",
					"value": "NFS"
				}
			],
			"newLine": true
		},
    "_helpLine1": {
      "newLine": true,
      "type": "divider",
      "color": "primary"
    },
    "cifsMount": {
      "hidden": "data.connectType !== 'NFS' && data.connectType !== 'CIFS'",
      "sm": 12,
      "md": 8,
      "lg": 4,
      "type": "text",
      "label": "Host",
      "help": "IP adress or hostname",
      "newLine": true
    },
    "cifsDomain": {
      "hidden": "data.connectType !== 'NFS' && data.connectType !== 'CIFS'",
      "sm": 12,
      "md": 8,
      "lg": 4,
      "type": "text",
      "label": "Domainname (optional)",
      "help": "Domainname (optional)",
    },
    "smbType": {
			"type": "select",
      "hidden": "data.connectType !== 'CIFS'",
			"label": "smb type",
			"sm": 12,
			"md": 8,
			"lg": 4,
			"help": "smb type",
			"options": [
				{
					"label": "SMB 1.0",
					"value": "vers=1.0"
				},
				{
					"label": "SMB 2.0",
					"value": "vers=2.0"
				},
				{
					"label": "SMB 3.0",
					"value": "vers=3.0"
				},
        {
					"label": "SMB 3.02",
					"value": "vers=3.02"
				},
        {
					"label": "SMB 3.1.1",
					"value": "vers=3.1.1"
				}
			],
		},
    "cifsUser": {
      "hidden": "data.connectType !== 'CIFS'",
      "sm": 12,
      "md": 8,
      "lg": 4,
      "type": "text",
      "label": "Username",
      "help": "Username",
      "newLine": true
    },
    "cifsPassword": {
      "hidden": "data.connectType !== 'CIFS'",
      "sm": 12,
      "md": 8,
      "lg": 4,
      "type": "password",
			"visible": true,
      "label": "Password",
      "help": "Password",
    },
    "noserverino": {
      "type": "checkbox",
      "hidden": "data.connectType !== 'CIFS'",
      "label": "mount with option \"noserverino\"",
      "sm": 6,
      "md": 4,
      "lg": 2
    },
    "cacheLoose": {
      "type": "checkbox",
      "hidden": "data.connectType !== 'CIFS'",
      "label": "mount with option \"Cache Loose\"",
      "sm": 6,
      "md": 4,
      "lg": 2
    },
    "sudoMount": {
      "type": "checkbox",
      "hidden": "data.connectType !== 'NFS' && data.connectType !== 'CIFS'",
      "label": "Mount as root",
      "sm": 12,
      "md": 8,
      "lg": 4,
      "newLine": true
    },
    "cifsDeleteOldBackup": {
      "type": "checkbox",
      "label": "Delete old NAS / Copy-Backups",
      "sm": 12,
      "md": 8,
      "lg": 4
    },
    "cifsOwnDir": {
      "hidden": "data.connectType == 'Expert'",
      "type": "checkbox",
      "label": "Extra path for backup types",
      "sm": 12,
      "md": 8,
      "lg": 4
    },
    "wakeOnLAN": {
      "hidden": "data.connectType == 'Copy'",
      "type": "checkbox",
      "label": "Wake on LAN",
      "sm": 12,
      "md": 8,
      "lg": 4,
      "newLine": true
    },
    "macAd": {
      "hidden": "data.connectType == 'Copy' || !data.wakeOnLAN",
      "sm": 12,
      "md": 8,
      "lg": 4,
      "type": "text",
      "label": "MAC address",
      "help": "MAC address"
    },
    "wolWait": {
      "hidden": "data.connectType == 'Copy' || !data.wakeOnLAN",
      "sm": 12,
      "md": 8,
      "lg": 4,
      "min": 0,
      "max": 180,
      "type": "number",
      "label": "seconds",
      "help": "WOL wait time in seconds"
    },
    "wolExtra": {
      "hidden": "data.connectType == 'Copy' || !data.wakeOnLAN",
      "type": "checkbox",
      "label": "Wake on LAN Advanced Settings",
      "sm": 12,
      "md": 8,
      "lg": 4,
      "newLine": true
    },
    "wolPort": {
      "hidden": "data.connectType == 'Copy' || !data.wakeOnLAN || !data.wolExtra",
      "sm": 12,
      "md": 8,
      "lg": 4,
      "min": 1,
      "max": 65535,
      "type": "number",
      "label": "port",
      "help": "port"
    },
    "cifsMinimalDir": {
      "hidden": "data.connectType == 'Expert' || !data.cifsOwnDir",
      "sm": 12,
      "md": 8,
      "lg": 4,
      "type": "text",
      "label": "Path for iobroker backup",
      "help": "Path for iobroker backup",
      "newLine": true
    },
    "cifsCcuDir": {
      "hidden": "data.connectType == 'Expert' || !data.cifsOwnDir",
      "sm": 12,
      "md": 8,
      "lg": 4,
      "type": "text",
      "label": "Path for CCU backup",
      "help": "Path for CCU backup",
    },
    "cifsDir": {
      "hidden": "data.connectType == 'Expert' || data.cifsOwnDir",
      "sm": 12,
      "md": 8,
      "lg": 4,
      "type": "text",
      "label": "path",
      "help": "path",
      "newLine": true
    },
    "expertMount": {
      "hidden": "data.connectType !== 'Expert'",
      "sm": 12,
      "type": "text",
      "label": "Mount command (expert)",
      "help": "Mount command (expert)",
      "newLine": true
    },
  }
}
