{
  "type": "panel",
  "label": "iobroker backup",
  "items": {
    "_checkConfig": {
      // this component is not visible in the UI
      // it checks the configuration
      "type": "custom",
      "i18n": true,
      "url": "custom/customComponents.js",
      "name": "ConfigCustomBackItUpSet/Components/CheckAllConfigInvisible"
    },
    "_header": {
      "type": "header",
      "size": 4,
      "text": "iobroker backup",
      "sm": 12,
    },
    "backupNow": {
      // Todo Backup Button!!
      "type": "staticLink",
      "button": true,
      "variant": "contained",
      "icon": "backup",
      "label": "backup now",
      "newLine": true
    },
    "minimalTime": {
      // Todo TimePicker only HH:mm for native minimalTime
      "hidden": "data.iobrokerCron",
      "newLine": true,
      "type": "timePicker",
      "label": "backup time",
      "help": "Backup start time in hh: mm",
      "format": "HH:mm",
      "views": ['hours', 'minutes'],
      "returnFormat": "HH:mm:ss",
      "sm": 9,
      "md": 6,
      "lg": 3
    },
    "iobrokerCronJob": {
      "hidden": "!data.iobrokerCron",
      "newLine": true,
      "type": "cron",
      "label": "backup cronjob",
      "help": "Backup time as cronjob",
      "complex": true,
      "sm": 9,
      "md": 6,
      "lg": 3
    },
    "minimalEveryXDays": {
      "hidden": "data.iobrokerCron",
      "sm": 9,
      "md": 6,
      "lg": 3,
      "min": 1,
      "max": 100,
      "type": "number",
      "label": "days",
      "help": "Backup will run every X days"
    },
    "minimalDeleteAfter": {
      "sm": 9,
      "md": 6,
      "lg": 3,
      "min": 1,
      "max": 100,
      "type": "number",
      "label": "piece",
      "help": "old iobroker backups delete after X-days"
    },
    "minimalNameSuffix": {
      "sm": 9,
      "md": 6,
      "lg": 3,
      "type": "text",
      "label": "name",
      "help": "Name suffix"
    },
    "iobrokerCron": {
      "newLine": true,
      "type": "checkbox",
      "label": "Create your own cronjob (for experts only)",
      "sm": 12
    },
  }
}
