{
  "type": "panel",
  "label": "CCU Backup",
  "items": {
    "_checkConfig": {
      // this component is not visible in the UI
      // it checks the configuration
      "type": "custom",
      "i18n": true,
      "url": "custom/customComponents.js",
      "name": "ConfigCustomBackItUpSet/Components/CheckAllConfigInvisible"
    },
    "_header": {
      "type": "header",
      "size": 4,
      "text": "Homematic CCU backup",
      "sm": 12,
    },
    "backupNow": {
      "type": "custom",
      "button": true,
      "variant": "contained",
      "url": "custom/customComponents.js",
      "name": "ConfigCustomBackItUpSet/Components/BackupNow",
      "backUpType": "ccu",
      "icon": "data:image/svg+xml;base64,",
      "label": "Backup now",
      "newLine": true
    },
    "detectNow": {
      // Todo detect Button!!
      "type": "custom",
      "button": true,
      "variant": "contained",
      "url": "custom/customComponents.js",
      "name": "ConfigCustomBackItUpSet/Components/DetectConfig",
      "adapter": "hm-rpc",
      "icon": "search",
      "label": "detect config"
    },
    "ccuTime": {
      // Todo TimePicker only HH:mm for native minimalTime
      "hidden": "data.ccuCron",
      "newLine": true,
      "type": "timePicker",
      "label": "backup time",
      "help": "Backup start time in hh: mm",
      "format": "HH:mm",
      "views": ['hours', 'minutes'],
      "returnFormat": "HH:mm:ss",
      "sm": 9,
      "md": 6,
      "lg": 3
    },
    "ccuCronJob": {
      "hidden": "!data.ccuCron",
      "newLine": true,
      "type": "cron",
      "label": "backup cronjob",
      "help": "Backup time as cronjob",
      "complex": true,
      "sm": 9,
      "md": 6,
      "lg": 3
    },
    "ccuEveryXDays": {
      "hidden": "data.ccuCron",
      "sm": 9,
      "md": 6,
      "lg": 3,
      "min": 1,
      "max": 100,
      "type": "number",
      "label": "days",
      "help": "Backup will run every X days"
    },
    "ccuDeleteAfter": {
      "sm": 9,
      "md": 6,
      "lg": 3,
      "min": 1,
      "max": 100,
      "type": "number",
      "label": "piece",
      "help": "old iobroker backups delete after X-days"
    },
    "ccuHost": {
      "newLine": true,
      "sm": 9,
      "md": 6,
      "lg": 3,
      "type": "text",
      "label": "IP address",
      "help": "IP of the CCU"
    },
    "ccuUser": {
      "sm": 9,
      "md": 6,
      "lg": 3,
      "type": "text",
      "label": "Username",
      "help": "Username of the CCU"
    },
    "ccuPassword": {
      "sm": 9,
      "md": 6,
      "lg": 3,
      "type": "password",
      "label": "password",
      "help": "Password of the CCU"
    },
    "ccuCron": {
      "newLine": true,
      "type": "checkbox",
      "label": "Create your own cronjob (for experts only)",
      "sm": 12
    },
    "ccuMulti": {
      "newLine": true,
      "type": "checkbox",
      "label": "Backup of several Systems",
      "sm": 12
    },
    "ccuEvents": {
      "newLine": true,
      "type": "table",
      "sm": 12,
      "label": "CCU hosts",
      "hidden": "!data.ccuMulti",
      "encryptedAttributes": ["pass"],
      "labelsInHeader": true,
      "items": [
        {"attr": "host", "type": "text", "title": "IP address", width: "20%"},
        {"attr": "user", "type": "text", "title": "Username", width: "20%"},
        {"attr": "pass", "type": "password", "title": "password", width: "20%"},
        {"attr": "nameSuffix", "type": "text", "title": "Name suffix", width: "20%"},
        {"attr": "usehttps", "type": "checkbox", "title": "use https", width: "5%"},
        {"attr": "signedCertificates", "type": "checkbox", "title": "Allow only signed certificates", width: "10%"},
      ]
    }
  }
}
